<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drink_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DAD9D9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:id="@+id/lyj_strawLatte"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_round_button"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/lyj_strawLatte_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/hot_cof"
                            android:padding="16dp" />

                        <TextView
                            android:id="@+id/lyj_strawLatte_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="딸기라떼"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lyj_strawLatte_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2500"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyj_sweetPotLatte"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_round_button"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/lyj_sweetPotLatte_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/latte"
                            android:padding="16dp" />

                        <TextView
                            android:id="@+id/lyj_sweetPotLatte_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="고구마라떼"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lyj_sweetPotLatte_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2500"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyj_greenTeaLatte"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_round_button"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/lyj_greenTeaLatte_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/tea"
                             />

                        <TextView
                            android:id="@+id/lyj_greenTeaLatte_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="녹차라떼"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lyj_greenTeaLatte_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2500"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/lyj_jamong_won"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#FF1F1F"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="15dp"
                >

                <LinearLayout
                    android:id="@+id/lyj_choco"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/menu_round_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/lyj_choco_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/choco"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/lyj_choco_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(아이스 / 핫) 초코"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/lyj_choco_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2500"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyj_grainLatte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/menu_round_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/lyj_grainLatte_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/hot_cof"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/lyj_grainLatte_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="곡물라떼"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/lyj_grainLatte_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2500"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyj_yeonyuLatte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/menu_round_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/lyj_yeonyuLatte_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/latte"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/lyj_yeonyuLatte_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="연유라떼"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/lyj_yeonyuLatte_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2500"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#FF1F1F"
                            android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</FrameLayout>